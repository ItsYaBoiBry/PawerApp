<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pawerskills.sg.pawerapp">

    <!-- Permissions here -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_main_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_main_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splash_screen_white"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sign_in"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".register"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".choose_categories"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".display_video"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".happenings"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".edit_profile"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".quiz"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".article_details"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".display_video_editprofile"
            android:configChanges="orientation"
            android:parentActivityName=".display_video"
            android:screenOrientation="portrait"/>
    </application>

</manifest>