                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvContentSeparator"
                android:layout_below="@id/content_for_userage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/segoeui"
                android:text="Articles that are not for your age group"/>

            <LinearLayout
                android:id="@+id/content_not_for_userage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvContentSeparator"
                android:orientation="vertical">


